<!-- item_place_description.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.googlemaps.ui.home.PlaceDescription" />
        <variable
            name="place"
            type="PlaceDescription" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/background_recycle">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/tour" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="@font/first"
            android:text="hello"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_below="@id/titleTextView"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/second"
            android:text="hello"
            android:textSize="16sp"
            android:layout_marginEnd="34dp"/>

        <TextView
            android:id="@+id/RatingTextView"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionTextView"
            android:layout_marginStart="7dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="-2dp"
            android:layout_toStartOf="@+id/checkBox"
            android:layout_toEndOf="@+id/imageView"
            android:fontFamily="@font/fifth"
            android:text="Rating :"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="34dp"
            android:layout_height="35dp"
            android:layout_below="@+id/descriptionTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="6dp" />

    </RelativeLayout>
</layout>
