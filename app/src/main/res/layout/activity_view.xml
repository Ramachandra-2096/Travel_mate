<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Activity"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="326dp"
                android:elevation="50dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:outlineAmbientShadowColor="#5347F1"
                android:outlineSpotShadowColor="#5347F1"
                android:layout_gravity="center"
                android:background="@color/white"
                app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="326dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bg"
                android:background="@drawable/button_bg"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="24dp"
                android:textColor="#04204C"
                android:text="Loading..."
                android:textStyle="bold"
                android:fontFamily="@font/first"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="23dp"
                android:text="Loading..."
                android:fontFamily="@font/second"
                android:textSize="18dp"
                android:paddingBottom="110dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"/>
    <Button
        android:id="@+id/button9"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"
        android:text="Show Map"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="#05166A"
        android:fontFamily="@font/fourth"
        android:textSize="23sp"
        android:text="Rating : " />


</RelativeLayout>